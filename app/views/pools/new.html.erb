  <div class = "row justify-content-center">
    <div class="col-12 col-lg-8">

      <h3> Rent a pool. Enjoy. Repeat. </h3>
      <%= simple_form_for @pool do |f| %>
      <div class="d-flex ">
        <div>
          <%= f.input :title, label: "Name of the pool" %>
          <%= f.input :address, label: "Location" %>
          <%= f.input :size, label: "Size", collection: ["Small", "Medium", "Large"]%>
          <%= f.input :price, label: "Price" %>
          <%= f.input :images, as: :file, label: "Add images", input_html: { multiple: true } %>
          </div>
          <div>
          <%= f.input :details, label: "-", class: "description-input", input_html: { placeholder: "Add a description here" } %>
