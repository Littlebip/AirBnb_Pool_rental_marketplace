  <div class="details">
    <div class="row row-cols-2">
      <div class="col">
        <div class="border">
          <%= simple_form_for [@pool, @booking] do |f| %>
            <%= f.input :start_date, as: :date %>
            <%= f.input :end_date, as: :date %>
