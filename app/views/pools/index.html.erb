<%# <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://img.freepik.com/free-vector/abstract-aqua-green-blue-watercolor-splash-texture_1017-31339.jpg?w=1380&t=st=1686119034~exp=1686119634~hmac=81c1e53d71ad03dc8ff4c276ed3e0b112977f7b58ca754af21209b836a2fddef);"> %>
<div class="banner">
  <div class="banner-content">
    <%= image_tag "SimPool logo - detoured.png", alt: "SimPool logo", id: "banner-logo" %>
  </div>
  <div class="banner-content banner-body">
    <h1 class="fs-2 text-center">Rent a pool. Enjoy. Repeat.</h1>
    <h2>
      <%= link_to "Choose a pool", "#pools", class: "button-main", id: "banner-btn" %>
     or
      <%= link_to "Rent your pool", new_pool_path, class: "button-main", id: "banner-btn" %>
    </h2>
  </div>
</div>


<div class= "pools-grid" id="pools">
  <% @pools.each do |pool| %>
    <%= link_to pool_path(pool), class: "nav-link" do %>
      <div class="card" style="width: 18rem;">
        <% counter = ['sun', 'cocktail', 'sunglasses', 'hat', 'summer', 'swimming'] %>
        <img src="https://source.unsplash.com/random/?pool,<%= counter.sample %>">
        <div class="card-body">
          <h5 class="card-title"><%= pool.title.nil? ? "Amazing pool, perfect for all your summer parties!!" : pool.title %></h5>
          <p><i class="fa-solid fa-euro-sign"></i> <%= pool.price %> </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
