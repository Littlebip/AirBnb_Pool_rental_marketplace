<div class="container">
  <% @bookings.each do |booking| %>
    <div class="w-50 m-3">
      <ul class="list-group rounded-4">
        <li class="list-group-item bg-light"><strong>Starting on:</strong> <%= booking.start_date %></li>
        <li class="list-group-item bg-light"><strong>Ending on:</strong> <%= booking.end_date %></li>
        <li class="list-group-item bg-light"><strong>Total duration:</strong> <%= @duration = (booking.end_date - booking.start_date).numerator %>
        <% if @duration == 1 %>
          <%= 'day' %>
        <% else %>
          <%= 'days' %>
        <% end %></li>
        <li class="list-group-item bg-light"><strong>Daily price:</strong> <%= @pool.price %> €</li>
        <li class="list-group-item bg-light"><strong>Total price:</strong> <%= @pool.price * @duration %> €</li>
        <li class="list-group-item bg-light"><strong>Options:</strong> <%= booking.details %></li>
        <li class="list-group-item bg-light"><strong>Booking status:</strong> <%= booking.status %></li>
      </ul>
    </div>
  <% end %>

  <%= link_to "Back", pool_path(@pool), class: "btn btn-primary" %>
</div>
